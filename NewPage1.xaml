<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp8_weatherApp.NewPage1"
             Title="Welcome to Weather Forecast" BackgroundColor="AliceBlue">
    <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto"
            RowSpacing="20">
        <StackLayout Grid.Row="0" Margin="20, 20, 20, 0" Orientation="Horizontal">

            <Frame Padding="10" CornerRadius="35" HasShadow="True" BorderColor="LightBlue">
                <Label Text="Your location"
                       FontSize="Default"/>
              
            </Frame>
            <ImageButton Source="search_icon.png" HeightRequest="30" WidthRequest="100" HorizontalOptions="EndAndExpand"/>

        </StackLayout>
        <StackLayout Grid.Row="1"
                     Orientation="Vertical">
            <Label x:Name="LblCity" FontSize="40" 
               HorizontalOptions="Center"
               TextColor="Gray" 
               Text="Mankweng"/>
            <Label x:Name="weatherDescription" 
               FontSize="40" 
               HorizontalOptions="Center" 
               TextColor="Gray" 
               Text="Clear Sky"/>
        </StackLayout>

        <Image Grid.Row="2"
               x:Name="ImageWeatherIpon"
               VerticalOptions="Start"
               HeightRequest="300"
               WidthRequest="300"
               Source="weather_app.png"/>
        <Grid Grid.Row="3" 
              RowDefinitions="Auto,Auto"
              ColumnDefinitions="0,33*,0,33*,0,33*" 
              Margin="20">
            <Image Grid.Row="0"
                   Grid.Column="0"
                   HorizontalOptions="Center"
                   HeightRequest="25"
                   Source="humidity"/>

        </Grid>


    </Grid>
</ContentPage>